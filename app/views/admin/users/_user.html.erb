<tr>
  <td><%= link_to user.name, [:admin, user] %></td>
  <td><%= user.email %></td>
  <td>
    <%= link_to t("users.edit"), edit_admin_user_path(user),
      class: "btn btn-primary" %>
    <%= link_to t("users.delete"), admin_user_path(user), method: :delete,
      data: {confirm: t("delete.confirm", name: user.name)},
      class: "btn btn-danger" %>
  </td>
</tr>
