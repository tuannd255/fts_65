<% provide :title, t("subjects.new") %>
<h1><%= t "subjects.new" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @subject] do |f| %>
      <%= render "devise/shared/error_messages", object: @subject %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :question_number %>
      <%= f.number_field :question_number, class: "form-control" %>

      <%= f.label :duration %>
      <%= f.number_field :duration, class: "form-control" %>

      <%= f.submit t("button.new"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
