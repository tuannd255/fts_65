<fieldset class="field">
  <%= f.label :answer %>
  <%= f.text_field :answer, class: "form-control" %>
  <div class="correct-choose">
    <%= f.label :is_correct %>
    <%= f.check_box :is_correct, class: "check" %>
  </div>
  <div class="remove-choose">
    <%= f.hidden_field :_destroy %>
    <%= link_to t("questions.remove"), "#", class: "remove_fields" %>
  </div>
</fieldset>
