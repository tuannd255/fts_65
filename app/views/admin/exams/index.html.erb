<% provide :title, t("exams.title") %>
<div class="exams-index col-sm-10 col-sm-offset-1">
  <h1><%= t "exams.all" %></h1>
  <hr />
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= sort_link @search, :created_at, t("exams.created_at") %></th>
        <th><%= sort_link @search, :subject, t("exams.subject") %></th>
        <th><%= sort_link @search, :duration, t("subjects.duration") %></th>
        <th><%= sort_link @search, :question_number,
          t("subjects.question_number") %></th>
        <th><%= sort_link @search, :spent_time, t("exams.spent_time") %></th>
        <th><%= sort_link @search, :score, t("exams.score") %></th>
        <th><%= sort_link @search, :status, t("exam.status") %></th>
        <th><%= t :action %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @exams %>
    </tbody>
  </table>
  <%= paginate @exams %>
</div>
